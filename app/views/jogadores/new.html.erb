<h1>Criar Jogador</h1>


<%= form_for @jogador, :html => { :multipart => true }, :url => { :action => "create" } do |f| %>
  <% if @jogador.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @jogador.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :nome %>
    <%= f.text_field :nome %>
  </p>

  <%#*<p>%>
  <%#= f.label :email %>
  <%#= f.text_field :email %>
  <%#*</p>%>
  <%#*<p>%>
  <%#= f.label :login %>
  <%#= f.text_field :login %>
  <%#*</p>%>
  <%#*<p>%>
  <%#= f.label :senha %>
  <%#= f.password_field :password %>
  <%#*</p>%>
  <%#*<p>%>
  <%#= f.label :password_confirmation, "Confirme a senha" %>
  <%#= f.password_field :password_confirmation %>
  <%#*</p>%>

  <p>
    <%= f.file_field :foto %>
  </p>

  <%= f.submit "Criar Jogador", :class => "small blue botao" %>
<% end %>

