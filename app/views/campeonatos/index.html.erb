<h1>Campeonatos</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Data</th>
    <th></th>
  </tr>

  <% @campeonatos.each do |campeonato| %>
    <tr>
      <td><%= link_to campeonato.nome, mostrar_campeonato_path(:id => campeonato.id)%></td>
      <td><%= campeonato.data.strftime("%d/%m/%Y") if campeonato.data%></td>
      <td><%= link_to 'Detalhar', mostrar_campeonato_path(:id => campeonato.id) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Novo Campeonato', novo_campeonato_path %>
