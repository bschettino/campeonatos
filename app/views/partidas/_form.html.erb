<%= form_for(@partida) do |f| %>
  <% if @partida.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@partida.errors.count, "erro") %> impedem que esta partida seja salva:</h2>

      <ul>
        <% @partida.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %>
    <%= f.text_field :nome %>
  </div>
 
  <div class="actions">
    <%= f.submit "Salvar partida", :class => "medium blue button" %>
  </div>
<% end %>
