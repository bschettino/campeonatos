<%= form_for(@clube) do |f| %>
  <% if @clube.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@clube.errors.count, "erro") %> impedem que este clube seja salvo:</h2>

      <ul>
        <% @clube.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %>
    <%= f.text_field :nome %>
  </div>
 
  <div class="actions">
    <%= f.submit "Salvar Clube", :class => "medium blue button" %>
  </div>
<% end %>
